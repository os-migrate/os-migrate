#!/bin/bash

set -euxo pipefail

if ! virsh pool-list | grep vagrant &> /dev/null; then
    virsh pool-create-as vagrant dir --target $HOME/.local/share/libvirt/vagrant
fi
if ! vagrant box list | grep fedora37 &> /dev/null; then
    vagrant box add --name fedora37 https://app.vagrantup.com/fedora/boxes/37-cloud-base/versions/37.20221105.0/providers/libvirt/unknown/vagrant.box
fi

vagrant up
